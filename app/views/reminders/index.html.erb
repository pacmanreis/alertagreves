<p class="text-center h2 mt-4 mb-4"><strong><%= t :reminders %></strong></p>

<div id="strikes-container">
  <div class="accordion" id="accordionExample">
  <% if @reminders.any? %>
    <% @reminders.each do |reminder| %>
      <%= render 'shared/card', strike: reminder.strike %>
    <% end %>
  <% else %>
    <h3 class="text-center my-5 h4">No reminders found</h3>
  <% end %>
</div>
</div>
