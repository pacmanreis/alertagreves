<div class="navbar navbar-light navbar-lewagon">
  <% if locale == :pt %>
  <div>
    <%= link_to "PT|EN", { locale: :en }, class: "language" %>
  </div>
  <% else %>
  <div>
    <%= link_to "EN|PT", { locale: :pt }, class: "language" %>
  </div>
  <% end %>

    <%= link_to "AlertaGreves", root_path, class: "title nav-link" %>

  <!-- <span class="title"><strong>AlertaGreves</strong></span> -->

  <button class="custom-toggler navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% unless user_signed_in? %>
        <li class="nav-item">
          <%= link_to "#{t(:login)}", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>

      <li class="nav-item">
        <%= link_to "#{t(:home)}", root_path, class: "nav-link" %>
      </li>

      <% if user_signed_in? %>

        <% if current_user.admin %>
          <li class="nav-item">
            <%= link_to "#{t(:add_strike)}", new_strike_path, class: "nav-link" %>
          </li>
        <% end %>

        <li class="nav-item">
            <%= link_to "#{t(:categories)}", root_path, class: "nav-link" %>
        </li>

        <li class="nav-item">
            <%= link_to "#{t(:reminders)}", root_path, class: "nav-link" %>
        </li>

        <li class="nav-item">
            <%= link_to "#{t(:settings)}", edit_user_registration_path, class: "nav-link" %>
        </li>

        <li class="nav-item">
            <%= link_to "#{t(:about_us)}", root_path, class: "nav-link" %>
        </li>

        <li class="nav-item">
          <%= link_to "#{t(:logout)}", destroy_user_session_path, method: :delete, class: "nav-link" %>
        </li>
      <% end %>

      <%= form_tag search_strikes_path, method: :get do %>
        <div class="input-group-append">
          <span class="input-group-text lighten-3" id="basic-text1">
            <i class="fas fa-search text-grey" aria-hidden="true"></i>
          </span>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control my-0 py-1",
            placeholder: "#{t(:search_strike)}"
          %>
        </div>
      <% end %>
    </ul>
  </div>
</div>
