<div class="form-container">
  <p class="text-center h2 mt-4 mb-4"><strong><%= "#{t(:edit_strike)}" %></strong></p>

  <%= simple_form_for @strike do |f| %>
    <div class="form-inputs">
      <%= f.input :organization %>
      <%= f.association :category %>
      <%= f.input :description %>
      <%= f.input :start_date %>
      <%= f.input :end_date %>
    </div>
    <div class="form-actions text-center">
      <%= f.submit class: 'btn btn-primary rounded' %>
      <%= link_to "#{t(:cancel)}", root_path, class: 'btn btn-secondary rounded' %>
    </div>
  <% end %>
</div>
