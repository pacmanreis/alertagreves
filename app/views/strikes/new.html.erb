<h1>CREATE A NEW STRIKE</h1>

<%= simple_form_for @strike do |f| %>
  <div class="form-inputs">
    <%= f.input :organization %>
    <%= f.association :category %>
    <%= f.input :description %>
    <%= f.association :union %>
    <p>Or create new union</p>
    <%= f.simple_fields_for :union do |p| %>
      <%= p.input :name %>
      <%= p.input :initials %>
      <%= p.input :url %>
    <% end %>
    <%= f.input :start_date %>
    <%= f.input :end_date %>
    <%# TODO: disable option to choose union and create new same time %>

  </div>
  <div class="form-actions">
    <%= f.submit class: 'btn btn-lg btn-primary' %>
    <%= link_to 'Cancel', root_path, class: 'btn btn-lg btn-secondary' %>
  </div>
<% end %>

